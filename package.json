{
    "name": "fleece",
    "displayName": "Fleece",
    "description": "Fleece is a natural language code generator for Visual Studio Code, powered by Llama and Alpaca language models.",
    "version": "0.0.1",
    "publisher": "cafesao",
    "repository": {
        "type": "git",
        "url": "https://github.com/cafesao/fleece"
    },
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "./logo-trans.png",
    "activationEvents": [
        "*",
        "onCommand:fleece.commentToCode",
        "onCommand:fleece.startDalai",
        "onCommand:fleece.stopFleece"
    ],
    "main": "./dist/index.js",
    "contributes": {
        "commands": [
            {
                "command": "fleece.commentToCode",
                "title": "Convert Comment to Code",
                "category": "Fleece"
            },
            {
                "command": "fleece.autocomplete",
                "title": "Autocomplete",
                "category": "Fleece"
            },
            {
                "command": "fleece.startDalai",
                "title": "Start/Restart Dalai Server",
                "category": "Fleece"
            },
            {
                "command": "fleece.stopFleece",
                "title": "Stop generation",
                "category": "Fleece"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "fleece.commentToCode",
                    "group": "edit"
                }
            ]
        },
        "keybindings": [
            {
                "command": "fleece.commentToCode",
                "key": "ctrl+alt+c",
                "mac": "cmd+alt+c",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/index.ts --bundle --outfile=dist/index.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "yarn vsce package",
        "publish": "yarn vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "20.11.25",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@vscode/vsce": "^2.24.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "source-map-support": "^0.5.21",
        "typescript": "^5.4.2",
        "esbuild": "^0.20.1"
    },
    "dependencies": {
        "pino": "^8.19.0",
        "socket.io-client": "^4.7.4"
    }
}
